# Add the `.html` extension to `text/html` or `application/xhtml+xml` files that lack one,
# or the `.css` extension to `text/css` files that lack one
adjust_extension = on

# Follow FTP links from HTML documents by default
follow_ftp = on

# Use UTF-8 as the default system encoding
local_encoding = UTF-8

# Do not go up in the directory structure when downloading recursively
no_parent = on

# Retry even when the connection was refused
retry_connrefused = on

# Ignore `robots.txt` and `<meta name=robots content=nofollow>`
robots = off

# Print the HTTP and FTP server responses
server_response = on

# Wait 60 seconds before timing out.
# This applies to all kinds of timeouts: DNS, connect and read.
# (The default read timeout is 15 minutes!)
timeout = 60

# Use server-provided last modification date, if available
timestamping = on

# Retry a few times when a download fails, but donâ€™t overdo it
# (The default is 20!)
tries = 3

# Use the last component of a redirection URL for the local file name
trust_server_names = on

# Disguise as Safari 13 on macOS 10.15
user-agent = "Mozilla/5.0 (Macintosh; Intel Mac OS X 10_15_4) AppleWebKit/605.1.15 (KHTML, like Gecko) Version/13.1.1 Safari/605.1.15"
